#: kivy 1.10.0

AttractorGame:


<AttractorGame>:
    id: game
    gameworld: world

    GameWorld:
        id: world
        gamescreenmanager: screen_manager
        size_of_gameworld: 100 * 1024
        zones: {'general': 10000, 'touch': 1000}

        # Systems

    ScreenManager:
        id: screen_manager
        gameworld: world


<ScreenManager>:
    MenuScreen:
        id: menu_screen

    PlayScreen:
        id: play_screen


<MenuScreen@GameScreen>:
    name: 'menu_screen'

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.4, 0.25

        Button:
            text: 'P'
            on_release: app.game.go_to_play_screen()


<PlayScreen@GameScreen>:
    name: 'play_screen'
